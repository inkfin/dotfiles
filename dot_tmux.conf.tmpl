## basic settings
set-option -g focus-events on

set-option -g prefix C-a
unbind C-b
bind C-a send-prefix # bind C-a as new tmux prefix
set-option -g prefix2 C-`

bind-key -n C-b send-prefix

set-option -g mouse on # mouse on
setw -g mode-keys vi

set -g status on
set -g status-justify centre
set -g status-interval 5
set-option -g status-position bottom
setw -g monitor-activity on # 非当前窗口有内容更新时在状态栏通知

set -g default-terminal "tmux-256color"
{{ if eq .chezmoi.os "darwin" }}
# add italic support on iTerm2 (https://weibeld.net/terminals-and-shells/italics.html)
set -as terminal-overrides ',xterm*:sitm=\E[3m'
{{ end }}
set-window-option -g xterm-keys on # tell tmux to send xterm keys

# Address vim mode switching delay (http://superuser.com/a/252717/65504)
set -sg escape-time 10
# Increase scrollback buffer size from 2000 to 50000 lines
set -g history-limit 50000
# Increase tmux messages display duration from 750ms to 4s
set -g display-time 4000
{{ if eq .chezmoi.os "darwin" }}
# (OS X) Fix pbcopy/pbpaste for old tmux versions (pre 2.6)
set -g default-command "reattach-to-user-namespace -l $SHELL"
{{ end }}
# Emacs key bindings in tmux command prompt (prefix + :)
set -g status-keys emacs
# Super useful when using "grouped sessions" and multi-monitor setup
setw -g aggressive-resize on

## image preview
set -g allow-passthrough on
set -ga update-environment TERM
set -ga update-environment TERM_PROGRAM
set -g visual-activity off

## key-mappings
bind c new-window -c "#{pane_current_path}"
bind '"' split-window -c "#{pane_current_path}"
bind % split-window -h -c "#{pane_current_path}"
bind - splitw -v -c '#{pane_current_path}'
bind | splitw -h -c '#{pane_current_path}'

bind -r k select-pane -U
bind -r j select-pane -D
bind -r h select-pane -L
bind -r l select-pane -R

bind -r ^k resizep -U 10
bind -r ^j resizep -D 10
bind -r ^h resizep -L 10
bind -r ^l resizep -R 10

# swap panel position with previous / next panel
bind ^p swapp -U
bind ^n swapp -D

# swap window (tab) position with previous / next panel
bind M-h swap-window -t :-
bind M-l swap-window -t :+

## copy mode
bind -T copy-mode-vi v send-keys -X begin-selection
bind -T copy-mode-vi y send-keys -X copy-selection-and-cancel

# Easy config reload
bind-key R source-file ~/.tmux.conf \; display-message "tmux.conf reloaded"
# save log
bind P pipe-pane -o "cat >>~/Desktop/#W.log" \; display "Toggled logging to ~/Desktop/#W.log"


### ==== Plugins ====
# List of plugins
set -g @plugin 'tmux-plugins/tpm'

# Other examples:
# set -g @plugin 'github_username/plugin_name'
# set -g @plugin 'github_username/plugin_name#branch'
# set -g @plugin 'git@github.com:user/plugin'
# set -g @plugin 'git@bitbucket.com:user/plugin'


## Status Bar

# https://draculatheme.com/tmux
set -g @plugin 'dracula/tmux'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'tmux-plugins/tmux-copycat'

# don't escape after yank
set -g @yank_action 'copy-pipe' # or 'copy-pipe-and-cancel' for the default

# 显示prefix键有没有被按下
set -g @plugin 'tmux-plugins/tmux-prefix-highlight'
# if have powerline font support
set -g @dracula-show-powerline true

# available plugins: battery, cpu-usage, git, gpu-usage, ram-usage, network, network-bandwidth, network-ping, weather, time
set -g @dracula-plugins "network-bandwidth ram-usage cpu-usage time" # "weather"
set -g @dracula-show-flags true
set -g @dracula-refresh-rate 5
set -g @dracula-ping-server "bing.com"
set -g @dracula-ping-rate 5
set -g @dracula-show-left-icon smiley
set -g @dracula-left-icon-padding 1
set -g @dracula-border-contrast true
set -g @dracula-show-timezone true
set -g @dracula-show-fahrenheit false
set -g @dracula-fixed-location "Shenzhen"
set -g @dracula-continuum-mode countdown
# Show if the last save was performed less than 60 seconds ago (default threshold is 15 seconds)
set -g @dracula-continuum-time-threshold 60
# available colors: white, gray, dark_gray, light_purple, dark_purple, cyan, green, orange, red, pink, yellow
set -g @dracula-cpu-usage-colors "light_purple dark_gray"
set -g @dracula-ram-usage-colors "cyan dark_gray"
set -g @dracula-git-colors "green dark_gray"
set -g @dracula-network-bandwidth-colors "orange dark_gray"
set -g @dracula-weather-colors "orange dark_gray"


# === tmux-resurrect
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @continuum-restore 'on'
set -g @resurrect-capture-pane-contents 'on'
# 修改会话数据的保持路径，此处不能使用除了$HOME, $HOSTNAME, ~之外的环境变量
set -g @resurrect-dir '~/.tmux/resurrect/'
# 1. [默认]每隔15分钟自动保存，当然你可以连按两次<prefix>键手动保存
# 2. [需要设置]通电后自动打开tmux
#set -g @continuum-boot 'on'
# 3. 开启tmux后自动恢复上一个保存的环境
set -g @continuum-restore 'on'
# 4.保存终端里的内容
set -g @resurrect-capture-pane-contents 'on'
# 5.for vim
set -g @resurrect-strategy-vim 'session'
# 6.for neovim
set -g @resurrect-strategy-nvim 'session'





# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run -b '~/.tmux/plugins/tpm/tpm'


