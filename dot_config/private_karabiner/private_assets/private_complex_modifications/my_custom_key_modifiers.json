{
  "title": "My Custom Key Modifiers",
  "rules": [
    {
      "description": "caps_lock 短按 esc , 长按 fn; Ctrl-Caps 切换大小写",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "caps_lock",
                "option",
                "command",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "fn",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        }
      ]
    },
    {
      "description": "Change Caps-U to PageUp, Caps-D to PageDown",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_down"
            }
          ]
        }
      ]
    },
    {
      "description": "Cursor moving: Change Caps-W to Alt-RightArrow, Caps-B to Alt-LeftArrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change Caps-HJKL to Arrow left,down,up,right",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "Caps-< change input to Chinese, Caps-> change input to English",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "com.sogou.inputmethod.sogou.pinyin"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.ABC"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "Map Caps-A,E to Command-Left & Command-Right",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "command"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Map Caps-Space to Ctrl-Space",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Leave common use hotkeys Caps-F,Q",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "f",
              "modifiers": [
                "command"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "option",
                "command",
                "left_shift",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "command"
              ]
            }
          ]
        }
      ]
    }
  ]
}