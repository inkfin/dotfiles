# vi: ft=toml

{{ $profile := promptString "profile" "personal" -}}
{{ $email := promptString "email" "inkfinite@qq.com" -}}
{{ $rime_ls := promptBool "external.rime_ls" true }}

[data]
    email = {{ $email | quote }}
    name = "inkfin"
    profile = {{ $profile | quote }}
[data.external]
    rime_ls = {{ $rime_ls | quote }}
[git]
    autoCommit = false
    autoPush = false
[diff]
    command = "nvim"
    args = ["-d", {{`"{{ .Destination }}"`}}, {{`"{{ .Target }}"`}}]
[merge]
    command = "nvim"
    args = ["-d", {{`"{{ .Destination }}"`}}, {{`"{{ .Source }}"`}}]
{{- if eq .chezmoi.os "windows" }}
[cd]
    # command = "pwsh.EXE"
    # args = ["-NoLogo"]
    command = "nu"
    args = []
{{- end}}

